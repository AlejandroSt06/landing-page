---
import EmailButton from "./EmailButton.astro";
import HomeImage from "./HomeImage.astro";
---

<div class="home-overlay"></div>
<div class="px-md-4 py-5 my-5 text-center mt-5 " >
  <h1
    class="display-4 fw-bold text-body-emphasis mt-5 mb-4 m-auto hero-heading"
    id="hero-heading"
  >
    One app to create stunning visual reality
  </h1>
  <div class="col-lg-6 mx-auto mt-2">
    <p class="lead mb-4 mt-4">
      Nulla is a powerful website builder platform where you can high-quality
      and secure website builder
    </p>

<EmailButton />

  </div>
  <HomeImage />

</div>

<style>
  
  .home-overlay {
    background-repeat: no-repeat;
    background-size: cover;
    background-image: url("https://cdn.dribbble.com/userupload/5516931/file/original-214fdf27551f3f83695af324d5aa197d.jpg?resize=1200x768");
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
    background-position: center right;
    z-index: -111;
    transform: rotateY(180deg);
  }
  .hero-heading {
    width: 50%;
  }
  @media screen and (max-width: 992px) {
    .hero-heading {
      width: 95%;
    }
  }
  .my-atropos {
    width: 320px;
    height: 160px;
  }
  .searchBox {
    display: flex;

    align-items: center;
    justify-content: space-between;
    gap: 8px;
    margin: 0 2%;
    border: 2px solid #2f3640;
    border-radius: 50px;
    position: relative;
  }

  .emailButton {
    color: white;
    position: absolute;
    right: 5px;
    border-radius: 50px;
    padding: 15px 30px 15px 30px;
    background: black;
    border: 0;
    display: inline-block;
    transition: all 300ms cubic-bezier(0.23, 1, 0.32, 1);
  }
  /*hover effect*/
  button:hover {
    color: #fff;
    background-color: #1a1a1a;
    box-shadow: rgba(0, 0, 0, 0.5) 0 10px 20px;
    transform: translateY(-1px);
  }
  /*button pressing effect*/
  button:active {
    box-shadow: none;
    transform: translateY(0);
  }

  .searchInput {
    border: none;
    background: none;
    outline: none;
    max-width: 550px;
    font-size: 15px;
    padding: 18px 46px 18px 26px;
    min-width: 550px;
  }
  .atropos-div {
    background-image: url("https://picsum.photos/200/300");
    width: 100px;
    height: 100px;
    border: 1px solid black;
  }
</style>
