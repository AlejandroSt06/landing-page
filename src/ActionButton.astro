---


const { text } = Astro.props;
const { isSecondary } = Astro.props

---
{isSecondary ?
<button type="button" class="btn-lg my-3 me-md-2 fw-bold outline">
  {text}
</button>
:
<button type="button" class="btn-lg my-3 me-md-2 fw-bold ">
  {text}
</button>
}
<style>

Button {
    color: white;
   
    right: 5px;
    border-radius: 50px;
    padding: 15px 45px 15px 45px;
    background: black;
    border: 0;
    display: inline-block;
    transition: all 300ms cubic-bezier(0.23, 1, 0.32, 1);
  }
  /*hover effect*/
  button:hover {
    color: #fff;
    background-color: #1a1a1a;
    box-shadow: rgba(0, 0, 0, 0.5) 0 10px 20px;
    transform: translateY(-1px);
  }
  /*button pressing effect*/
  button:active {
    box-shadow: none;
    transform: translateY(0);
  }
  text-tertiary{
    color: var(--bs-tertiary-color-rgb);
  }
  .outline{
    background-color: transparent;
    border: 2px solid #1a1a1a;
    color: #1a1a1a;
  }
</style>