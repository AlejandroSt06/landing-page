---
import ActionButton from "./ActionButton.astro";
const {isSecondaryEmail} = Astro.props
---

{isSecondaryEmail ?
<form class="searchBox searchBox-secondary">
    <input
      class="searchInput"
      type="text"
      name=""
      placeholder="Email adress"
      maxlength="45"
      required
    />
    <button class="emailButton" type="submit">
      
      
      <span class="d-none d-lg-flex">Start free trial</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="d-flex d-lg-none icon icon-tabler icon-tabler-send" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
   <path d="M10 14l11 -11"></path>
   <path d="M21 3l-6.5 18a.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a.55 .55 0 0 1 0 -1l18 -6.5"></path>
</svg>
      </button>
  </form> 
  :
  <form class="searchBox ">
    <input
      class="searchInput"
      type="text"
      name=""
      placeholder="Enter yout email adress"
      maxlength="45"
      required
    />
    <button class="emailButton" type="submit"> Start free trial</button>
  </form>
    }



  <style>

.searchBox {
    display: flex;

    align-items: center;
    justify-content: space-between;
    gap: 8px;
    margin: 0 2%;
    border: 2px solid #2f3640;
    border-radius: 50px;
    position: relative;
  }
  .searchBox-secondary{

    border: 2px solid white;
    
  }
  .emailButton {
    color: white;
    position: absolute;
    right: 2px;
    border-radius: 50px;
    padding: 15px 30px 15px 30px;
    background: black;
    border: 0;
    display: inline-block;
    transition: all 300ms cubic-bezier(0.23, 1, 0.32, 1);
  }
  .searchBox-secondary .emailButton{
    background: #2f3640;
  }
  .searchBox-secondary .searchInput {
    color: white;
  }
  /*hover effect*/
  button:hover {
    color: #fff;
    background-color: #1a1a1a;
    box-shadow: rgba(0, 0, 0, 0.5) 0 10px 20px;
    transform: translateY(-1px);
  }
  /*button pressing effect*/
  button:active {
    box-shadow: none;
    transform: translateY(0);
  }

  .searchInput {
    border: none;
    background: none;
    outline: none;
    max-width: 550px;
    font-size: 15px;
    padding: 18px 46px 18px 26px;
    min-width: 550px;
  }
  @media screen and(max-width: 1022px){

    .searchInput{

      max-width: 101px;
      min-width: 100px;
    }
  }
  </style>